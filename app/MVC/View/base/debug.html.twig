<style>
    .foot {
        border-top: 1px solid #999999;
        position:fixed;
        width: 80%;
        z-index: 10000;
        height: 400px;
        font-size:18px;
        color: #000;
        /*background: #10dc25;*/
        display: flex;
        justify-content: center; /* align horizontal */
        border-bottom-left-radius:25px;
        border-bottom-right-radius:25px;
        right: 0;
        left: 0;
        margin-right: auto;
        margin-left: auto;
        top: -350px;
    }
    .foot:hover{
        cursor: pointer;
    }

    .slide-up
    {
        top: 0px !important;
    }

    .slide-down
    {
        top: -350px !important;
    }
</style>

<div class="foot">
    <div class="alert alert-warning" id="#debugContainer">
    <div class="container">
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>parameter</th>
                <th>current value</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>route</td>
                <td>{{ app.request.get('_route') }}</td>
            </tr>
            <tr>
                <td>controller</td>
                <td>{{ app.request.get('_controller') }}</td>
            </tr>
            <tr>
                <td>running on docker?</td>
                <td>{{ app.onDocker ? 'yes' : 'no' }}</td>
            </tr>
            <tr>
                <td>server/assets root (app.serverRoot)</td>
                <td>{{ app.serverRoot }}</td>
            </tr>
            <tr>
                <td>routing / url root (app.urlRoot)</td>
                <td>{{ app.urlRoot }}</td>
            </tr>
            <tr>
                <td>logged in user</td>
                <td>username: {{ user.username ? user.username : 'not handed over to the template' }} (id:{{ user.id ? user.id : '-' }})</td>
            </tr>
            <tr>
                <td>user role</td>
                <td>{{ sessionUserRole ? sessionUserRole : 'not handed over to the template' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
        <div class="text-left">
            <h2 style="float: left">debug helper</h2>
        </div>
        <div class="text-center">
            <h2 style="">You can turn it off by setting the $app['debug'] to false</h2>
        </div>
    </div>
</div>

